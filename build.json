{
	"version": "0.0.1",
	"workspace": "chalet-example-monoscript",
	"environment": {
		"showCommands": false,
		"externalDepDir": "chalet_external",
		"path.windows": [
			"C/Program Files (x86)/Microsoft Visual Studio/2019/Community/MSBuild/Current/Bin",
			"C:/Program Files/Mono/bin"
		]
	},
	"configurations": [
		"Debug",
		"Release"
	],
	"templates:all": {
		"language": "C++",
		"compilerSettings:Cxx": {
			"cppStandard": "c++20",
			"cppStandard.macos": "c++2a",
			"warnings": "pedantic",
			"posixThreads": true,
			"defines:debug": [
				"_DEBUG"
			],
			"includeDirs.windows": [
				"C:/Program Files/Mono/include/mono-2.0"
			],
			"includeDirs.macos": [
				"/Library/Frameworks/Mono.framework/Versions/Current/include/mono-2.0"
			]
		}
	},
	"projects": {
		"chalet-example-monoscript": {
			"kind": "consoleApplication",
			"location": "src",
			"compilerSettings:Cxx": {
				"pch": "src/PCH.hpp",
				"defines": [
					"_THREAD_SAFE"
				],
				"libDirs.windows": [
					"C:/Program Files/Mono/lib"
				],
				"libDirs.macos": [
					"/Library/Frameworks/Mono.framework/Versions/Current/lib"
				],
				"links.windows": [
					"mono-2.0-sgen"
				],
				"links.macos": [
					"mono-2.0",
					"iconv"
				]
			},
			"runProject": true,
			"preBuild:!debug": "csbuild_Release.sh",
			"preBuild:debug.windows": "msbuild.exe",
			"preBuild:debug.!windows": "msbuild"
		}
	}
}