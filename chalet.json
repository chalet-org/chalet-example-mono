{
	"version": "0.0.1",
	"workspace": "chalet-example-mono",
	"defaultConfigurations": [
		"Debug",
		"Release"
	],
	"searchPaths.windows": [
		"${env:ProgramFiles}/Mono/bin",
		"${env:ProgramFiles}/Mono/lib/mono/4.5"
	],
	"abstracts:*": {
		"language": "C++",
		"settings:Cxx": {
			"cppStandard": "c++20",
			"cppStandard.macos": "c++2a",
			"warnings": "pedantic",
			"defines.debug": [
				"_DEBUG"
			],
			"includeDirs.windows": [
				"${env:ProgramFiles}/Mono/include/mono-2.0"
			],
			"includeDirs.macos": [
				"/Library/Frameworks/Mono.framework/Versions/Current/include/mono-2.0"
			],
			"includeDirs.linux": [
				"/usr/include/mono-2.0"
			]
		}
	},
	"targets": {
		"csbuild-step": {
			"kind": "process",
			"description": "MSBuild: Compile C#",
			"path": "msbuild",
			"arguments": [
				"-nologo",
				"-verbosity:m",
				"-clp:ForceConsoleColor",
				// "-property:OutputPath=${buildDir}",
				"-property:Configuration=${configuration}",
				"-property:Platform=AnyCPU",
				"project.csproj"
			]
		},
		"chalet-example-mono": {
			"kind": "executable",
			"location": "src",
			"runTarget": true,
			"settings:Cxx": {
				"staticLinking": true,
				"pch": "src/PCH.hpp",
				"defines": [
					"_THREAD_SAFE"
				],
				"libDirs.windows": [
					"${env:ProgramFiles}/Mono/lib"
				],
				"libDirs.macos": [
					"/Library/Frameworks/Mono.framework/Versions/Current/lib"
				],
				"links.windows": [
					"mono-2.0-sgen"
				],
				"links.macos": [
					"mono-2.0",
					"iconv"
				],
				"links.linux": [
					"mono-2.0"
				]
			}
		}
	},
	"distribution": {
		"libmono": {
			"kind": "bundle",
			"configuration": "Release",
			"subdirectory": "lib/mono/4.5",
			"include.!windows": [
				"mscorlib"
			],
			"include.windows": [
				"mscorlib.dll"
			]
		},
		"all": {
			"kind": "bundle",
			"configuration": "Release",
			"subdirectory": "bin",
			"buildTargets": "*",
			"includeDependentSharedLibraries": false,
			"include.windows": [
				"cs-test.dll",
				"mono-2.0-sgen.dll"
			]
		}
	}
}