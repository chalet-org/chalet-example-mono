{
	"version": "0.0.1",
	"workspace": "chalet-example-mono",
	"defaultConfigurations": [
		"Debug",
		"Release"
	],
	"searchPaths.windows": [
		"${env:ProgramFiles}/Mono/bin"
	],
	"abstracts:*": {
		"language": "C++",
		"settings:Cxx": {
			"cppStandard": "c++20",
			"cppStandard.macos": "c++2a",
			"warnings": "pedantic",
			"defines.debug": [
				"_DEBUG"
			],
			"includeDirs.windows": [
				"${env:ProgramFiles}/Mono/include/mono-2.0"
			],
			"includeDirs.macos": [
				"/Library/Frameworks/Mono.framework/Versions/Current/include/mono-2.0"
			],
			"includeDirs.linux": [
				"/usr/include/mono-2.0"
			]
		}
	},
	"targets": {
		"csbuild-step": {
			"kind": "process",
			"description": "MSBuild: Compile C#",
			"path": "msbuild",
			"arguments": [
				"/nologo",
				"/clp:ForceConsoleColor",
				"/property:Configuration=${configuration}",
				"/property:Platform=AnyCPU"
			]
		},
		"chalet-example-mono": {
			"kind": "executable",
			"location": "src",
			"runTarget": true,
			"settings:Cxx": {
				"pch": "src/PCH.hpp",
				"defines": [
					"_THREAD_SAFE"
				],
				"libDirs.windows": [
					"${env:ProgramFiles}/Mono/lib"
				],
				"libDirs.macos": [
					"/Library/Frameworks/Mono.framework/Versions/Current/lib"
				],
				"links.windows": [
					"mono-2.0-sgen"
				],
				"links.macos": [
					"mono-2.0",
					"iconv"
				],
				"links.linux": [
					"mono-2.0"
				]
			}
		}
	}
}